% set up the stuff for the multiple addresses
\let\addresses\@empty
\newcounter{addressno}
\newcommand{\address}[2][]{%
        \stepcounter{addressno}%
        % print the address number like a footnote
        \raisebox{0.6ex}{\small\theaddressno}%
        % store the address for later printing
        \protected@edef\@tempa{\protect\StoreAddress{\theaddressno}}%
        \@tempa{#1}{#2}%
}
\newcommand\StoreAddress[3]{% store the address for later printing
  \g@addto@macro\addresses{\par\raisebox{0.6ex}{\small#1}#2{#3}}%
}
